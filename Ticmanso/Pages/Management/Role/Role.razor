@using System.Net.Http.Json
@using TicmansoCrud.Shared
@using TicmansoWebAPI.Models
@using TicmansoWebAPI
@using MudBlazor


@page "/management/roles"
@inject HttpClient HttpClient
@inject ISnackbar Snackbar

<PageTitle>Administrar roles</PageTitle>

<MudTable Items="@roles" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@loading" LoadingProgressColor="Color.Info">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Roles</MudText>
        <MudSpacer />
        <MudButton Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add" OnClick="OpenCreateForm">Crear Rol</MudButton>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh>Nombre</MudTh>
        <MudTh>Acciones</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Nombre">@context.Name</MudTd>
        <MudTd DataLabel="Acciones">
            <MudButton Color="Color.Default" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Edit" OnClick="@(() => OpenEditForm(context.Id))">Editar</MudButton>
            <MudButton Color="Color.Error" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" OnClick="@(() => DeleteRole(context.Id))">Borrar</MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>

<MudDialog @bind-IsVisible="showForm">
    <TitleContent>
        <MudText Typo="Typo.h6">@(editingRoleId == 0 ? "Crear Rol" : "Editar Rol")</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@role" @ref="form">
            <MudTextField @bind-Value="role.Name" Label="Nombre" Required="true" RequiredError="El nombre es requerido"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseForm">Cancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="SaveRole">Guardar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private List<RoleDTO> roles = new List<RoleDTO>();
    private RoleDTO role = new RoleDTO();
    private bool loading = true;
    private bool showForm = false;
    private long editingRoleId = 0;
    private MudForm form;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoles();
    }

    private async Task LoadRoles()
    {
        loading = true;
        roles = await HttpClient.GetFromJsonAsync<List<RoleDTO>>("https://localhost:7144/api/Ticmanso/role");
        loading = false;
    }

    private void OpenCreateForm()
    {
        role = new RoleDTO();
        editingRoleId = 0;
        showForm = true;
    }

    private async Task OpenEditForm(long id)
    {
        role = await HttpClient.GetFromJsonAsync<RoleDTO>($"https://localhost:7144/api/Ticmanso/role/{id}");
        editingRoleId = id;
        showForm = true;
    }

    private void CloseForm()
    {
        showForm = false;
    }

    private async Task SaveRole()
    {
        if (editingRoleId == 0)
        {
            await HttpClient.PostAsJsonAsync("https://localhost:7144/api/Ticmanso/role", role);
            Snackbar.Add("Rol creado", Severity.Success);
        }
        else
        {
            await HttpClient.PutAsJsonAsync($"https://localhost:7144/api/Ticmanso/role/{editingRoleId}", role);
            Snackbar.Add("Rol actualizado", Severity.Info);
        }

        showForm = false;
        await LoadRoles();
    }

    private async Task DeleteRole(long id)
    {
        await HttpClient.DeleteAsync($"https://localhost:7144/api/Ticmanso/role/{id}");
        Snackbar.Add("Rol eliminado", Severity.Warning);
        await LoadRoles();
    }
}

