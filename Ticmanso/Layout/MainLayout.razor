@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<div class="page">
    <div class="sidebar" heigth="@mudPaperStyle">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@inject IJSRuntime JSRuntime
@code {
    private string mudPaperStyle = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            int screenHeight = await JSRuntime.InvokeAsync<int>("eval", "window.innerHeight");
            mudPaperStyle = $"height: {screenHeight}px;";
            StateHasChanged();
        }
    }
}