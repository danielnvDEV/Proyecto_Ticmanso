@inject IJSRuntime JSRuntime
@code {
    private string mudPaperStyle = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            int screenHeight = await JSRuntime.InvokeAsync<int>("eval", "window.innerHeight");
            mudPaperStyle = $"height: {screenHeight}px;";
            StateHasChanged();
        }
    }
}
